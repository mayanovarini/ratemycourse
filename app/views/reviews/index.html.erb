<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Tutor</th>
      <th>Semester</th>
      <th>Year</th>
      <th>Title</th>
      <th>Credit</th>
      <th>Mandatory</th>
      <th>Online</th>
      <th>Review</th>
      <th>Reading1</th>
      <th>Reading2</th>
      <th>Reading3</th>
      <th>Reading4</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.tutor %></td>
        <td><%= review.semester %></td>
        <td><%= review.year %></td>
        <td><%= review.title %></td>
        <td><%= review.credit %></td>
        <td><%= review.mandatory %></td>
        <td><%= review.online %></td>
        <td><%= review.review %></td>
        <td><%= review.reading1 %></td>
        <td><%= review.reading2 %></td>
        <td><%= review.reading3 %></td>
        <td><%= review.reading4 %></td>
        <td><%= review.rating %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
